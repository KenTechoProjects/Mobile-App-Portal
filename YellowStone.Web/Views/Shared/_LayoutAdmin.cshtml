@model YellowStone.Web.ViewModels.PageLayout

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -FBN Mobile Dashboard</title>


    <link href="~/css/style.css" rel="stylesheet">
