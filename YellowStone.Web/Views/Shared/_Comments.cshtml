@model YellowStone.Web.ViewModels.CommentsViewModel

    <div class="row">
        <div class="col-lg-12 text-center">
            <p style="font-weight:800">Comments</p>
        </div>
    </div>

@if (Model.IsSuccessful)
{
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <table id="tblAttachment" class="table table-condensed">
                <thead>
                    <tr>
                        <th>Comment</th>
                        <th>Made By</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.commentsItems)
                    {
                    <tr>
                        <td>@item.CommentText</td>
                        <td> @item.CreatedBy</td>
                        <td>@item.DateCreated</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-1"></div>

    </div>
}
else
{
    <div class="col-lg-12 text-center">
        <label style="font-weight:500;">No Comments</label>
    </div>
}

<script type="text/javascript">
    var isSuccessful = '@Model.IsSuccessful';
    if (isSuccessful != 'True') {
        $("#btnProceed").prop("disabled", true);

    } else {
        $("#btnProceed").prop("disabled", false);
    }
</script>