@model IEnumerable<YellowStone.Models.User>

@if (Model == null || Model.Count() == 0)
{
    <p style="color:red"> No Users for this department</p>
}
else
{

    <table class="table table-striped table-condensed" style=" border-radius:5px;">
        <thead class="head-title-box">
            <tr style="color:white">
                <th class="left">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="left">
                    @Html.DisplayNameFor(model => model.StaffId)
                </th>
                <th class="left">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th class="left">
                    @Html.DisplayNameFor(model => model.LastLoginDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="left">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="left">
                        @Html.DisplayFor(modelItem => item.StaffId)
                    </td>
                    <td class="left">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="left">
                        @if (item.LastLoginDate != null)
                        {
                            <p>@item.LastLoginDate</p>
                        }
                        else if (item.PreviousLoginDate != null)
                        {
                            <p>@item.PreviousLoginDate</p>
                        }
                        else
                        {
                            <p>N/A</p>
                        }
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}