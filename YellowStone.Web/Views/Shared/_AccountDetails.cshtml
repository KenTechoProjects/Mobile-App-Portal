
@model YellowStone.Web.ViewModels.AccountDetailsViewModel



    <input type="hidden" value="" id="CIF" />
    <div class="card">
        <h5 class="card-header">Account Information</h5>
        <div class="card-body">
            @if (Model != null && Model.IsSuccessful)
            {
                <form>
                    <div class="form-group row">
                        <label for="lblAccountNumber" class="col-sm-6 col-form-label">Account Number</label>
                        <div class="col-6">
                            <label name="lblAccountNumber" id="lblAccountNumber" class="form-control-plaintext">@Model.AccountNumber</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lblAcctName" class="col-sm-6 col-form-label">Account Name</label>
                        <div class="col-6">
                            <label name="lblAcctName" class="form-control-plaintext" id="lblAcctName">@Model.AccountName</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lblEmailAddress" class="col-sm-6 col-form-label">E-Mail Address</label>
                        <div class="col-6">
                            <label name="lblEmailAddress" id="lblEmailAddress">@Model.Email</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lblMobile" class="col-sm-6 col-form-label">Phone Number</label>
                        <div class="col-6">
                            <label name="lblMobile" id="lblMobile">@Model.MobileNo</label>
                        </div>
                    </div>
                    @*<div class="form-group row">
                    <label for="lblAccountType" class="col-sm-6 col-form-label">Account Type</label>
                    <div class="col-6">
                        <label name="lblAccountType" id="lblAccountType"> @Model.AccountType </label>
                    </div>
                </div>*@
                    <div class="form-group row">
                        <label for="lblAccountStatus" class="col-sm-6 col-form-label">Account Status</label>
                        <div class="col-6">
                            <label name="lblAccountStatus" id="lblAccountStatus">@Model.AccountStatus</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lblCustomerId" class="col-sm-6 col-form-label">CIF</label>
                        <div class="col-6">
                            <label name="lblCustomerId" id="lblCustomerId">@Model.CustomerId</label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12 right">
                            >> <a href="#" data-toggle="modal" data-target="#addAccountModal">Change Account</a>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <div class="col-lg-12 text-center">
                    <label style="font-weight:500;">Could not find account</label>
                </div>
            }
        </div>
    </div>




<script type="text/javascript">
    $(document).ready(() => {

    var isSuccessful = '@Model.IsSuccessful';

    if (isSuccessful != 'True') {
        $("#btnProceed").prop("disabled", true);
        $('#btn-add-account').show();
        Notify("Could not find account");
    } else {
        divButtons
        $("#divButtons").prop("hidden", false);
        $("#btnProceed").prop("disabled", false);
        $('#hdfAccountName').val('@Model.AccountName');
        $('#hdfBranchCode').val('@Model.BranchCode');
        $('#btn-add-account').hide();
    }
    })

</script>